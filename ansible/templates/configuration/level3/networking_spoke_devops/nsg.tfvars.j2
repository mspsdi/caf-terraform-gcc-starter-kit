network_security_group_definition = {
  # This entry is applied to all subnets with no NSG defined
  empty_nsg = {
    version            = 1
    resource_group_key = "networking_spoke_devops_re1"
    name               = "empty"
    nsg = []
  }

  # devops runner
  runner_nsg = {
    version            = 1
    resource_group_key = "networking_spoke_devops_re1"
    name               = "runner"   
    tags = { 
      purpose = "devops runner network security group"
      # project_code = "{{project_code}}"  
      env = "{{caf_environment}}" 
      zone = "devops"     
    }     
    flow_logs = {
      version = 2
      name    = "runner_nsg_flow_log"
      enabled = true
      storage_account = { # local az    
        storage_account_destination = "all_regions"
        retention = {
          enabled = true
          days    = 30
        }
      }
      # traffic_analytics = { # remote lz
      #   enabled                             = true         
      #   log_analytics_workspace_destination = "central_logs"
      #   interval_in_minutes                 = "10"
      # }
    }
    diagnostic_profiles = { 
      nsg = { # local az
        definition_key   = "network_security_group"
        destination_type = "storage"     
        destination_key  = "all_regions"
      }
      operations = { # remote lz
        name             = "operations"
        definition_key   = "network_security_group"
        destination_type = "log_analytics"
        lz_key = "shared_services"        
        destination_key  = "central_logs"
      }
    }          
    nsg = [
      {
        name                       = "ssh-inbound-22",
        priority                   = "100"
        direction                  = "Inbound"
        access                     = "Allow"
        protocol                   = "tcp"
        source_port_range          = "*"
        destination_port_range     = "22"
        source_address_prefix      = "*"
        destination_address_prefix = "VirtualNetwork"
      },      
      {
        name                       = "out-communication-allow-443",
        priority                   = "110"
        direction                  = "Outbound"
        access                     = "Allow"
        protocol                   = "tcp"
        source_port_range          = "*"
        destination_port_range     = "443"
        source_address_prefix      = "VirtualNetwork"
        destination_address_prefix = "VirtualNetwork"
      },

      # custom deny all inbound
