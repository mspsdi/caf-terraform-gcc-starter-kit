azurerm_firewalls = {
  # ingress firewall
  fw_re1 = {
    name               = "{{env_code}}{{dash_1}}{{zone_code}}{{dash_2}}{{tier_code}}{{dash_last}}egress-internet"

    resource_group_key = "networking_firewall_egress_internet_re1"

    # add the resource group name to resolve the issue of subnet rg different from firewall rg
    # TODO: subnet resource group name - input as variable for code generation
    # ** firewall MUST be in the same resource group as VNet and Subnet AzureFirewallSubnet

    sku_tier = "Basic" # "Premium"
    firewall_policy_key = "policy1"    
{% if gcc_platform_import | trim == '0' %}
    resource_group_name = "{{resource_group_name}}" # the resource group name of the subnet    
    subnet_id = "/subscriptions/{{subscription_id}}/resourceGroups/{{resource_group_name}}/providers/Microsoft.Network/virtualNetworks/{{ingress_egress_vnet_name_ingress_internet}}/subnets/AzureFirewallSubnet"
{% else %}
{% if gcc_platform_import | trim == '1' %}
    resource_group_name = "{{resource_group_name}}"  # the resource group name of the subnet - TODO: replace random characters
    ## direct subnet_id reference
    lz_key = "networking_hub_internet"
    virtual_subnet_key = "AzureFirewallSubnet_egress"        
    public_ip_key = "firewall_re1"
{% else %}
    resource_group_name = "{{prefix}}-rg-{{resource_group_name}}"  # the resource group name of the subnet - TODO: replace random characters
    ## direct subnet_id reference
    lz_key = "networking_hub_internet"
    virtual_subnet_key = "AzureFirewallSubnet_egress"        
    public_ip_key = "firewall_re1"
{% endif %} 
{% endif %} 

    # management subnet is required for force tunneling
    management_ip_configuration = {
      management_ip_configuration = {
        name = "{{env_code}}{{dash_1}}{{zone_code}}{{dash_2}}{{tier_code}}{{dash_last}}management-ip"
        public_ip_key = "firewall_mgmt_re1"
{% if gcc_platform_import | trim == '0' %}
        subnet_id = "/subscriptions/{{subscription_id}}/resourceGroups/{{resource_group_name}}/providers/Microsoft.Network/virtualNetworks/{{ingress_egress_vnet_name_egress_internet}}/subnets/AzureFirewallManagementSubnet"
{% else %}
        lz_key = "networking_hub_internet"
        virtual_subnet_key = "AzureFirewallManagementSubnet_egress"        
{% endif %} 
      }
    }    

    # add diagnostic_profiles and tags
    tags = { 
      purpose = "egress networking spoke resource group" # replace with purpose
      project_code = "{{project_code}}" 
      env = "{{caf_environment}}" 
      zone = "{{tag_zone_code}}"
      tier = "{{tag_tier_code}}"          
    } 

    diagnostic_profiles = {
      central_logs_region = {
        definition_key   = "firewall"
        destination_type = "log_analytics"
        destination_key  = "central_logs"
      }
    }
  }
}

